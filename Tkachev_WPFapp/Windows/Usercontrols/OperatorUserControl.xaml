<UserControl x:Class="Tkachev_WPFapp.Windows.Usercontrols.OperatorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tkachev_WPFapp.Windows.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ListView Name="lv_requests" ItemsSource="{Binding RequestsList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"></GridViewColumn>
                    <GridViewColumn Header="Tech model" DisplayMemberBinding="{Binding TechModelNavigation.Value}"></GridViewColumn>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding StatusNavigation.Value}"></GridViewColumn>
                    <GridViewColumn Header="Client" DisplayMemberBinding="{Binding Client.Name}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Margin="0 15 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="5 0" Click="bt_createNew_Click" Name="bt_createNew">Create new</Button>
            <Button Margin="5 0" Click="bt_setMaster_Click" Name="bt_setMaster">Set master</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
