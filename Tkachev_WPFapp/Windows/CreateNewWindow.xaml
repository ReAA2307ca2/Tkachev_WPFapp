<Window x:Class="Tkachev_WPFapp.Windows.CreateNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tkachev_WPFapp.Windows"
        mc:Ignorable="d"
        Title="CreateNewWindow" Height="450" Width="300">
    <Border Margin="15" BorderBrush="Black" BorderThickness="2px">
        <StackPanel Margin="5">
            <Label FontSize="18">Tech type</Label>
            <ComboBox SelectionChanged="cb_techType_SelectionChanged" Name="cb_techType"></ComboBox>

            <Label FontSize="18">Tech model</Label>
            <ComboBox Name="cb_techModel" 
                      IsEnabled="False"></ComboBox>

            <Label FontSize="18">Description</Label>
            <TextBox Name="tbox_Desc" FontSize="18" Height="60"></TextBox>

            <Label FontSize="18">Client</Label>
            <ComboBox Name="cb_client"></ComboBox>

            <StackPanel Margin="0 10" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Name="bt_cancel" Click="bt_cancel_Click" Margin="5 0" FontSize="18">Cancel</Button>
                <Button Name="bt_save" Click="bt_save_Click" Margin="5 0" FontSize="18">Save</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
