<Window x:Class="Tkachev_WPFapp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tkachev_WPFapp"
        mc:Ignorable="d"
        Title="AuthWindow" Height="300" Width="400">
    <StackPanel Margin="15">
        <Label FontSize="28" HorizontalAlignment="Center">Login</Label>
        <TextBox Name="tbox_login" FontSize="20"></TextBox>

        <Label FontSize="28" HorizontalAlignment="Center">Password</Label>
        <TextBox Name="tbox_password" FontSize="20"></TextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0 15 0 0">
            <Button Name="bt_exit" Click="bt_exit_Click" FontSize="20" 
                    Margin="5 0">Exit</Button>
            <Button Name="bt_signInUser" Click="bt_signInUser_Click" FontSize="20" Margin="5 0">Sign In</Button>
        </StackPanel>
    </StackPanel>
</Window>
